## http://editorconfig.org/

# top-most EditorConfig file
root = true

[**.go]

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

# tabs indentation
ident_style = tab
ident_size = 2

[**.md]
# Markdown specific syntax
trim_trailing_whitespace = false

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2

[**.{js,jsx,json,css,html}]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2
